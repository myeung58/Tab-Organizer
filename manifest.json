{
  "manifest_version": 2,
  "name"            : "Tabs",
  "description"     : "Tab organizer",
  "short_name"      : "tabs",
  "version"         : "0.1",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon" : "images/icon.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "app/tabsZen-background.js"
    ]
  },
  "permissions": [
    "debugger",
    "storage",
    "tabs"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}